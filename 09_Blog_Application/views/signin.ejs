<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Sign-in</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
        <%- include('./partials/script.ejs') %>

            <% if (locals.msg) { %>
                <p style="color: red; margin: 5px;"> <%= locals.msg %> </p>
            <% } %>

            <form action="/user/signin" method="POST" style="margin: 5px;">
                
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-1 col-form-label">Email</label>
                    <div class="col-sm-2">
                        <input type="email" class="form-control" name="email" placeholder="xyz@gmail.com">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword3" class="col-sm-1 col-form-label">Password</label>
                    <div class="col-sm-2">
                        <input type="password" class="form-control" name="password" placeholder="********">
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>

</body>

</html>